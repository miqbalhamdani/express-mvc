<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo List</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-sm-12 m-auto mt-5">

          <div>
            <a href="/todo/create">
              <button class="btn btn-primary mb-3 float-right">Add Todo</button>
            </a>
          </div>

          <ul class="list-group">
            <% todos.forEach(todo => { %>
              <li class="list-group-item d-flex justify-content-between">
                <span class="<% if (todo.isDone) { %>
                  text-decoration-line-through
                <% } %>">
                  <%= todo.name %> <br>
                  (<%= todo.formatedDate() %>)
                </span>

                <div>
                  <a href="/todo/check/<%= todo.id %>">
                    <button class="btn btn-success">Check</button>
                  </a>
                  <a href="/todo/uncheck/<%= todo.id %>">
                    <button class="btn btn-warning">Uncheck</button>
                  </a>
                  <a href="/todo/delete/<%= todo.id %>">
                    <button class="btn btn-danger">Delete</button>
                  </a>
                </div>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
